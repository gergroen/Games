@page "/"
@using TamagotchiGame.Models

<h3>Tamagotchi</h3>

<div class="pet-container">
    <div class="pet-status">
        <p>Name: @PetService.State.Name</p>
        <p>Hunger: @((int)PetService.State.Hunger)</p>
        <p>Happiness: @((int)PetService.State.Happiness)</p>
        <p>Energy: @((int)PetService.State.Energy)</p>
        <p>Mood: @PetService.CurrentMood</p>
    </div>
    <div class="pet-visual">
        <div class="pet-sprite @PetService.SpriteClasses">@PetService.Face</div>
    </div>
    <div class="actions">
        <button class="btn btn-sm btn-primary" @onclick="OnFeed">Feed (A)</button>
        <button class="btn btn-sm btn-secondary" @onclick="OnPlay">Play (B)</button>
        <button class="btn btn-sm btn-warning" @onclick="OnRest">Rest (X)</button>
    </div>
    <p><small>Use your gamepad: A=Feed, B=Play, X=Rest.</small></p>
    <p>Gamepad Connected: @(GamepadConnected ? $"Yes ({GamepadId})" : "No")</p>
</div>
